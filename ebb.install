/**
 * Implements hook_install().
 */
function ebb_install() {
  // Create all the fields
  foreach (_ebb_type_installed_fields() as $field) {
    field_create_field($field);
  }
  
  // Create all the field instances
  foreach (_ebb_type_installed_instances() as $instance) {
    field_create_instance($instance);
  }
}

/**
 * Implements hook_uninstall().
 */
function ebb_uninstall() {
  // Delete all field instances defined by this module, their data and the field itself
  foreach (array_keys(_ebb_type_installed_fields()) as $field_name) {
    field_delete_field($field_name);
  }
  
  // Delete all field instances attached to the entity types defined by this module
  $instances = array();
  // @TODO: collect all instances of all entity types, not just the default ones
  $instances = array_merge($instances, field_info_instances('ebb', 'ebb'));
  $instances = array_merge($instances, field_info_instances('ebb_type', 'ebb_type'));
  foreach ($intances as $instance_name => $instance) {
    field_delete_instance($instance);
  }
  
  // Purge all field information
  field_purge_batch(1000);
}

